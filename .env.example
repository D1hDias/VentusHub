# VentusHub - Exemplo de Variáveis de Ambiente
# IMPORTANTE: Copie este arquivo para .env e configure com seus valores reais

# Ambiente de execução
NODE_ENV=production
PORT=80

# Banco de dados PostgreSQL
DATABASE_URL=postgresql://usuario:senha@host:5432/database?sslmode=require

# Segurança - Sessões
SESSION_SECRET=sua-chave-secreta-de-256-bits-aqui

# Segurança - JWT Multi-tenant
JWT_SECRET=sua-chave-jwt-secreta-de-256-bits-aqui
JWT_EXPIRY=24h

# Criptografia - LGPD/CPF
CRYPTO_SECRET=sua-chave-criptografia-lgpd-256-bits-aqui

# Master Admin Credentials
MASTER_ADMIN_USERNAME=master_admin
MASTER_ADMIN_PASSWORD=VentusHub2025@Master

# Supabase (Armazenamento de arquivos)
VITE_SUPABASE_URL=https://seu-projeto.supabase.co
VITE_SUPABASE_ANON_KEY=sua-chave-anonima-supabase

# Supabase - Servidor (para upload de documentos)
SUPABASE_URL=https://seu-projeto.supabase.co
SUPABASE_SERVICE_ROLE_KEY=sua-chave-service-role-supabase

# Resend - Provedor de Email
RESEND_API_KEY=re_sua_api_key_aqui
RESEND_FROM_EMAIL=noreply@ventushub.com.br
RESEND_FROM_NAME=VentusHub

# APIs de IA (Opcional)
OPENROUTER_API_KEY=sk-or-v1-sua-chave-openrouter
GEMINI_API_KEY=sua-chave-gemini

# PostgreSQL (para Docker Compose)
POSTGRES_DB=ventushub
POSTGRES_USER=ventushub_user
POSTGRES_PASSWORD=sua-senha-postgres-segura

# Redis (Opcional - para cache)
REDIS_PASSWORD=sua-senha-redis-segura

# IMPORTANTE: 
# - Nunca commite arquivos .env no Git
# - Use senhas fortes com pelo menos 32 caracteres
# - Troque todas as chaves em produção
# - Mantenha backups seguros das variáveis de produção